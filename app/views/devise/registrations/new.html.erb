<div class="containar">
  <div class='row'>
    <div class='col-sm-6 offset-sm-2'>
    <h5 class="mt-3">新規会員登録</h5>
      <table class="table table-borderless">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <tr>
          <td>
            <div class="form-row">
              <%= f.label :名前, class:"col-sm-4 form-label" %>
              <div class="col-sm-4">
                <%= f.text_field :last_name, autofocus: true, class:"form-control", placeholder: "（姓）" %>
              </div>
              <div class="col-sm-4">
                <%= f.text_field :first_name, autofocus: true, class:"form-control", placeholder: "（名）" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="form-row">
            <%= f.label :ニックネーム（サイトの中で使用する名前）, class:"col-sm-4 form-label" %>
              <div class="col-sm-8">
              <%= f.text_field :nickname, autofocus: true, class:"form-control" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="form-row">
            <%= f.label :メールアドレス, class:"col-sm-4 form-label" %>
              <div class="col-sm-8">
                <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"sample@example.com" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="form-row">
            <%= f.label :郵便番号（ハイフンなし）,class:"col-sm-4 form-label" %>
              <div class="col-sm-8">
              <%= f.text_field :postal_code, autofocus: true, class:"form-control" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="form-row">
            <%= f.label :住所, class:"col-sm-4 form-labe" %>
              <div class="col-sm-8">
              <%= f.text_field :address, autofocus: true, class:"form-control" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="form-row">
            <%= f.label :電話番号（ハイフンなし）, class:"col-sm-4 form-label" %>
              <div class="col-sm-8">
              <%= f.text_field :phone_number, autofocus: true, class:"form-control" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="form-row">
            <%= f.label :パスワード（６文字以上）, class:"col-sm-4 form-label"%>
              <div class="col-sm-8">
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="form-row">
            <%= f.label :パスワード（確認用）, class:"col-sm-4 form-label" %>
              <div class="col-sm-8">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            <div class="actions">
              <%= f.submit "新規登録", class: "btn btn-info" %>
            </div>
          </td>
        </tr>
        <% end %>
      </table>

      <h5>既に登録済みの方</h5>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
