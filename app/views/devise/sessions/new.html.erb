<div class="containar">
  <div class='row'>
    <div class='col-sm-6 offset-sm-1'>
      <table class="table table-borderless">
        <thead><h5>ログイン</h5></thead>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <tbody>
          <tr>
            <td>
              <div class="form-row">
                <%= f.label :メールアドレス, class:"col-sm-2 col-form-label-sm" %><br />
                <div class="col-sm-6">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"sample@example.com" %>
                </div>
              </div>
            </td>
          </tr>

          <tr>
            <td>
              <div class="form-row">
                <%= f.label :パスワード, class:"col-sm-2 col-form-label-sm" %><br />
                <div class="col-sm-6">
                <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"password" %>
                </div>
              </div>
            </td>
          </tr>
        </tbody>
      </table>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
      <% end %>

      <h5>まだ会員登録していない方はこちら</h5>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
