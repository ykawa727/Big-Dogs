<div class="container justify-content-center">
  <div class="row">
    <div class='col-sm-10'>
      <%= form_with model:@dog_owner, url:dog_owner_path, local:true do |f|%>
        <table class="table table-borderless">
          <thead>
            <h6>会員情報編集</h6>
          </thead>
          <tbody>
            <div class = 'form-group'>
              <%= f.label :"氏名", class:"col-sm-4 col-form-label-sm" %>
              <%= f.text_field :last_name, autofocus: true, class:"form-control form-control-sm", placeholder: @dog_owner.last_name %>
              <%= f.text_field :first_name, autofocus: true, class:"form-control form-control-sm", placeholder: @dog_owner.first_name %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"ニックネーム", class:"col-sm-4 col-form-label-sm" %>
              <%= f.text_field :nickname, autofocus: true, class:"form-control form-control-sm", placeholder: @dog_owner.nickname %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"メールアドレス", class:"col-sm-4 col-form-label-sm" %>
              <%= f.text_field :email, autofocus: true, class:"form-control form-control-sm", placeholder: @dog_owner.email %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"郵便番号", class:"col-sm-4 col-form-label-sm" %>
              <%= f.text_field :postal_code, autofocus: true, class:"form-control form-control-sm", placeholder: @dog_owner.postal_code %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"住所", class:"col-sm-4 col-form-label-sm" %>
              <%= f.text_field :address, autofocus: true, class:"form-control form-control-sm", placeholder: @dog_owner.address %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"電話番号", class:"col-sm-4 col-form-label-sm" %>
              <%= f.text_field :phone_number, autofocus: true, class:"form-control form-control-sm", placeholder: @dog_owner.phone_number %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"自己紹介", class:"col-sm-4 col-form-label-sm" %>
              <%= f.text_area :introduction, autofocus: true, class:"form-control form-control-sm", placeholder: @dog_owner.introduction %>
            </div>
            <div class="form-group">
              <%= f.label :"プロフィール画像", class:"col-sm-4 col-form-label-sm" %>
              <%= f.attachment_field :image, autofocus: true, id:"image", placeholder:"プロフィール画像", class: "form-control-file user_profile_image" %>
            </div>
          </tbody>
          <%= f.submit "編集内容を保存", class: "btn btn-outline-secondary" %>
          <%= link_to "退会する", dog_owners_withdrawal_path, class: "btn btn-outline-secondary" %>
        </table>
      <% end %>
    </div>
  </div>
</div>