<div class="container justify-content-center">
  <div class="row">
    <div class='col-sm-10 mt-2'>
      <%= form_with model:@dog_owner, url:dog_owner_path, method: :patch, local:true do |f|%>
        <table class="table table-borderless ">
          <thead>
            <h4 class="py-2">会員情報編集</h4>
          </thead>
          <tbody>
            <div class = 'form-group'>
              <%= f.label :"氏名", class:"form-label" %>
              <%= f.text_field :last_name, autofocus: true, class:"form-control", placeholder: @dog_owner.last_name %>
              <%= f.text_field :first_name, autofocus: true, class:"form-control", placeholder: @dog_owner.first_name %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"ニックネーム", class:"form-label" %>
              <%= f.text_field :nickname, autofocus: true, class:"form-control", placeholder: @dog_owner.nickname %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"メールアドレス", class:"form-label" %>
              <%= f.text_field :email, autofocus: true, class:"form-control", placeholder: @dog_owner.email %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"郵便番号", class:"form-label" %>
              <%= f.text_field :postal_code, autofocus: true, class:"form-control", placeholder: @dog_owner.postal_code %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"住所", class:"form-label" %>
              <%= f.text_field :address, autofocus: true, class:"form-control", placeholder: @dog_owner.address %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"電話番号", class:"form-label" %>
              <%= f.text_field :phone_number, autofocus: true, class:"form-control", placeholder: @dog_owner.phone_number %>
            </div>
            <div class = 'form-group'>
              <%= f.label :"自己紹介", class:"form-label" %>
              <%= f.text_area :introduction, autofocus: true, class:"form-control", placeholder: @dog_owner.introduction %>
            </div>
            <div class="form-group">
              <%= f.label :"プロフィール画像", class:"form-label" %>
              <%= attachment_image_tag @dog_owner, :image, :fill, 150, 150, format: 'jpeg', fallback: "no_image.jpg" %>
              <%= f.attachment_field :image, autofocus: true, id:"image", placeholder: @dog_owner.image_id, class: "form-control-file" %>
            </div>
          </tbody>
          <%= f.submit "編集内容を保存", class: "btn btn-primary" %>
          <%= link_to "退会する", withdrawal_dog_owners_path, class: "btn btn-danger" %>
        </table>
      <% end %>
    </div>
  </div>
</div>