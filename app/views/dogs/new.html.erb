<div class="container justify-content-center">
  <div class="row">
    <div class='col-sm-10'>
      <%= form_with model:@dog, url:dogs_path, local:true do |f|%>
        <table class="table table-borderless">
          <thead>
            <h4>愛犬情報登録・追加</h4>
          </thead>

          <tbody>
            <tr>
              <td>
                <div class="form-row">
                  <%= f.label :名前, class:"col-sm-3 col-form-label-sm" %>
                  <div class="col-sm-4">
                    <%= f.text_field :last_name, autofocus: true, class:"form-control form-control-sm", placeholder: "ワンちゃんの名前" %>
                  </div>
                </div>
              </td>
            </tr>
            
            <tr>
              <td>
                <div class="form-row">
                  <%= f.label :犬種, class:"col-sm-3 col-form-label-sm" %>
                  <div class="col-sm-4">
                    <%= f.text_field :last_name, autofocus: true, class:"form-control form-control-sm", placeholder: "犬種" %>
                  </div>
                </div>
              </td>
            </tr>

        </table>
      <% end %>
    </div>
  </div>
</div>