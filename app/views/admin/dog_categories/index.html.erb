<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h4 class="mt-3">ワンちゃん犬種一覧・追加</h4>
      <table>
        <thead>
          <tr>
            <%= form_with model:@dog_category, url:admin_dog_categories_path,local:true do |f| %>
              <th>ジャンル名</th>
              <td><%= f.text_field :category, :size => "50*50"%></td>
              <td><%= f.submit '新規登録', class: "btn btn-info" %></td>
            <% end %>
          </tr>
        </thead>

        <tbody>
          <tr>
            <th>犬種</th>
          </tr>

          <% @dog_categories.each do |dog_category| %>
          <tr>
            <td><%= dog_category.category %></td>
            <td><%= link_to '編集する', edit_admin_dog_category_path(dog_category.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      
    <div class="mt-3">
      <%= paginate @dog_categories %>
    </div>
    
    </div>
  </div>
</div>


