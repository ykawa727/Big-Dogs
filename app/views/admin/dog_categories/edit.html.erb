<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h4 class="mt-3">ワンちゃん犬種名編集</h4>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-sm-8">
    <%= form_with model:@dog_category, url:admin_dog_category_path, method: :patch, local:true do |f|%>
      <div class = 'form-group'>
        <%= f.label :"犬種名", class:"form-label" %>
        <%= f.text_field :category, autofocus: true, class:"form-control", placeholder: @dog_category.category %>
      </div>
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      <%= link_to "削除する", admin_dog_category_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>