<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h4>ワンちゃん犬種名編集</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10">
      <%= form_with model:@dog_category, url:admin_dog_category_path, method: :patch, local:true do |f|%>
        <div class = 'form-group'>
          <%= f.label :"犬種名", class:"col-sm-2 col-form-label-sm" %>
          <%= f.text_field :category, autofocus: true, class:"co-sm-4 form-control form-control-sm", placeholder: @dog_category.category %>
        </div>
        <%= f.submit "編集内容を保存", class: "btn btn-outline-secondary" %>
        <%= link_to "削除する", admin_dog_category_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</div>