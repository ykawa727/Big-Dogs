<div class="container">
  <div class="row">
    <div class="col-sm-10">
    <h4 class="mt-3">飼い主情報編集</h4>

      <%= form_with model:@dog_owner, url:admin_dog_owner_path, method: :patch, local:true do |f|%>

      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @dog_owner.id %></td>
        </tr>

        <tr class="form-group">
          <th><%= f.label :氏名 %></th>
          <td><%= f.text_field :last_name, class:"form-control" %><br>
              <%= f.text_field :first_name, class:"form-control" %>
          </td>
        </tr>

        <tr class="form-group">
          <th><%= f.label :ニックネーム %></th>
          <td><%= f.text_field :nickname, class:"form-control" %></td>
        </tr>

        <tr class="form-group">
          <th><%= f.label :郵便番号 %></th>
          <td><%= f.text_field :postal_code, class:"form-control" %></td>
        </tr>

        <tr class="form-group">
          <th><%= f.label :住所 %></th>
          <td><%= f.text_field :address, class:"form-control" %></td>
        </tr>

        <tr class="form-group">
          <th><%= f.label :電話番号 %></th>
          <td><%= f.text_field :phone_number, class:"form-control" %></td>
        </tr>

        <tr class="form-group">
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.text_field :email , class:"form-control"%></td>
        </tr>

        <tr class="form-group">
          <th><%= f.label :会員ステータス %></th>
          <td><%= f.select :is_deleted, [["有効会員","false"], ["退会済み","true"]], class:"form-control" %></td>
        </tr>
      </table>


      <div class="row text-right">
        <%= f.submit "変更を保存" ,class: "btn btn-success " %>
      </div>
      <% end %>
    </div>
  </div>
</div>
