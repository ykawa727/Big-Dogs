<div class="container">
  <div class="row">
    <div class="col-sm-10 mb-2">
      <h4><%= @dog_owner.last_name + @dog_owner.first_name %>さんの会員詳細</h4>
        <table border=”1″>
          <thead class=“table-light”>
            <tr>
              <th style = "padding: 5px 100px 5px 2px; background-color: #dddddd;">氏名</th>
              <td style = "padding: 5px 400px 5px 2px;"><%= @dog_owner.last_name + " " + @dog_owner.first_name %></td>
            </tr>
            <tr>
              <th style = "padding: 5px 100px 5px 2px; background-color: #dddddd;">ニックネーム</th>
              <td style = "padding: 5px 400px 5px 2px;"><%= @dog_owner.nickname %></td>
            </tr>
            <tr>
              <th style = "padding: 5px 100px 5px 2px; background-color: #dddddd;">郵便番号</th>
              <td style = "padding: 5px 400px 5px 2px;"><%= @dog_owner.postal_code %></td>
            </tr>
            <tr>
              <th style = "padding: 5px 100px 5px 2px; background-color: #dddddd;">住所</th>
              <td style = "padding: 5px 400px 5px 2px;"><%= @dog_owner.address %></td>
            </tr>
            <tr>
              <th style = "padding: 5px 100px 5px 2px; background-color: #dddddd;">電話番号</th>
              <td style = "padding: 5px 400px 5px 2px;"><%= @dog_owner.phone_number %></td>
            </tr>
            <tr>
              <th style = "padding: 5px 100px 5px 2px; background-color: #dddddd;">メールアドレス</th>
              <td style = "padding: 5px 400px 5px 2px;"><%= @dog_owner.email %></td>
            </tr>
            <tr>
              <th style = "padding: 5px 100px 5px 2px; background-color: #dddddd;">会員ステータス</th>
              <td>
                <% if @dog_owner.is_deleted == true %>
                  <div style="color:#696969">退会</div>
                <% else %>
                  <div style="color:#c71585">有効</div>
                <% end %>
              </td>
            </tr>
          </thead>
        </table>
    </div>


    <div class="col-sm-10 mb-3">
      <div class="col-2">
        <%= link_to "編集する", edit_admin_dog_owner_path(@dog_owner.id), class: "btn btn-outline-secondary" %>
      </div>
    </div>